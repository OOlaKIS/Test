list_menu = ["ТОП-10 собак","Викторина о собаках", "Игра: Угадай число", "Игра: Орел/решка", "Об авторе", "Выход"]
 
class dog:
 
    def __init__(self,top_rating,name,weight,height,wool,character):
        self.top_rating = top_rating
        self.name = name
        self.weight = weight
        self.height = height
        self.wool = wool
        self.character = character
 
 
